<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingUpActivity">

    <ImageView
        android:id="@+id/singUp_circle_1"
        android:layout_width="460dp"
        android:layout_height="460dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="336dp"
        android:layout_marginEnd="-125dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle_3" />

    <ImageView
        android:id="@+id/singUp_circle_2"
        android:layout_width="460dp"
        android:layout_height="460dp"
        android:layout_marginStart="-183dp"
        android:layout_marginTop="-253dp"
        android:layout_marginEnd="183dp"
        android:layout_marginBottom="253dp"
        app:layout_constraintBottom_toBottomOf="@id/singUp_circle_1"
        app:layout_constraintEnd_toEndOf="@id/singUp_circle_1"
        app:layout_constraintStart_toStartOf="@id/singUp_circle_1"
        app:layout_constraintTop_toTopOf="@id/singUp_circle_1"
        app:srcCompat="@drawable/circle_3" />

    <Button
        android:id="@+id/singUp_button"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        style="@style/MyButtonStyle"
        android:text="@string/sing_up"
        android:textAllCaps="false"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="225dp"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="392dp"
        app:layout_constraintStart_toStartOf="@id/singUp_circle_1"
        app:layout_constraintEnd_toEndOf="@id/singUp_circle_1"
        app:layout_constraintBottom_toBottomOf="@id/singUp_circle_1"
        app:layout_constraintTop_toTopOf="@id/singUp_circle_1" />

    <EditText
        android:id="@+id/create_password"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-51dp"
        android:layout_marginTop="206dp"
        android:layout_marginEnd="178dp"
        android:layout_marginBottom="223dp"
        android:ems="10"
        android:hint="@string/create_password"
        android:inputType="textPassword"
        android:paddingStart="14dp"
        android:paddingBottom="40dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@id/singUp_circle_1"
        app:layout_constraintEnd_toEndOf="@id/singUp_circle_1"
        app:layout_constraintStart_toStartOf="@id/singUp_circle_1"
        app:layout_constraintTop_toTopOf="@id/singUp_circle_1"
        tools:ignore="RtlSymmetry" />


    <EditText
        android:id="@+id/create_username"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="129dp"
        android:layout_marginTop="321dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="108dp"
        android:ems="10"
        android:hint="@string/create_username"
        android:inputType="textPersonName"
        android:paddingStart="14dp"
        android:paddingBottom="40dp"
        android:textColor="@color/black"
        android:textColorHint="@color/text_color"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@id/singUp_circle_2"
        app:layout_constraintEnd_toEndOf="@id/singUp_circle_2"
        app:layout_constraintStart_toStartOf="@id/singUp_circle_2"
        app:layout_constraintTop_toTopOf="@id/singUp_circle_2"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/enter_email"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="129dp"
        android:layout_marginTop="197dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="232dp"
        android:ems="10"
        android:hint="@string/enter_email_id"
        android:inputType="textEmailAddress"
        android:paddingStart="14dp"
        android:paddingBottom="40dp"
        android:textColor="@color/black"
        android:textColorHint="@color/text_color"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@id/singUp_circle_2"
        app:layout_constraintEnd_toEndOf="@id/singUp_circle_2"
        app:layout_constraintStart_toStartOf="@id/singUp_circle_2"
        app:layout_constraintTop_toTopOf="@id/singUp_circle_2"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/singUp_text"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="361dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="center_vertical"
        android:text="@string/create_account"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/singUp_circle_2"
        app:layout_constraintEnd_toEndOf="@id/singUp_circle_2"
        app:layout_constraintStart_toStartOf="@id/singUp_circle_2"
        app:layout_constraintTop_toTopOf="@id/singUp_circle_2" />

    <ImageButton
        android:id="@+id/singUp_back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="359dp"
        android:layout_marginBottom="45dp"
        style="@style/MyBackButtonStyle"
        app:layout_constraintBottom_toTopOf="@id/singUp_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>